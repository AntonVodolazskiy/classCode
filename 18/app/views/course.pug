extends layout

block content
	h1 Все курсы академии
	a.btn.btn-primary(href="/api/courses/add") Создать новый курс
	table.table.table-striped
		thead
			tr
				th Id Курса
				th Курс
				th
				th
		tbody
			each courses in course
				tr
					td= courses.id
					td= courses.name
					td(style="width: 50px;"): a(href="/api/courses/edit/" + course.id)
						span.glyphicon.glyphicon-pencil
					td(style="width: 50px;"): a(href="/api/courses/delete/" + course/id)
						span.glyphicon.glyphicon-remove			

